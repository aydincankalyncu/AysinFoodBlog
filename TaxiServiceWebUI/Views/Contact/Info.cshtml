@model TaxiServiceWebUI.Models.InfoViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_4.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate pb-5 text-center">
                <h1 class="mb-3 bread">Bizimle İletişime Geç</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href="@Url.Action("Index","Home")">Ana Sayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>İletişim<i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pb contact-section">
    <div class="container">
        <div class="row block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form asp-controller="Contact" asp-action="SendMail" class="bg-light p-5 contact-form">
                    <div style="background-color:cadetblue">@ViewBag.AcceptMessage</div>
                    <div class="form-group">
                        <input asp-for="Contact.Name" type="text" class="form-control" placeholder="Adınız*">
                        <span style="margin-left:5px; color:red; font-weight:bold;" asp-validation-for="Contact.Name"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Contact.Email" type="text" class="form-control" placeholder="Mail Adresiniz*">
                        <span style="margin-left:5px; color:red; font-weight:bold;" asp-validation-for="Contact.Email"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Contact.Subject" type="text" class="form-control" placeholder="Konu">
                        <span style="margin-left:5px; color:red; font-weight:bold;" asp-validation-for="Contact.Subject"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Contact.Message" type="text" class="form-control" placeholder="Mesaj İçeriği*" />
                        <span style="margin-left:5px; color:red; font-weight:bold;" asp-validation-for="Contact.Message"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Mesaj Gönder" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>

            <div class="col-md-6 d-flex">
                <div id="map" class="bg-white">
                    <iframe src="@Model.Info.MapUrl" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex contact-info">
            <div class="col-md-3 d-flex">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-map-signs"></span>
                    </div>
                    <h3 class="mb-4">Adres</h3>
                    <p>@Model.Info.Location</p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-phone2"></span>
                    </div>
                    <h3 class="mb-4">İletişim Numarası</h3>
                    <p><a href="tel://@Model.Info.PhoneNumber">@Model.Info.PhoneNumber</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-paper-plane"></span>
                    </div>
                    <h3 class="mb-4">Email Adresi</h3>
                    <p><a href="mailto:@Model.Info.Email">@Model.Info.Email</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="align-self-stretch box p-4 text-center">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="icon-globe"></span>
                    </div>
                    <h3 class="mb-4">Website</h3>
                    <p><a href="#">iskitchen.com</a></p>
                </div>
            </div>
        </div>
    </div>
</section>
